generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  mobile        String
  passwordHash  String
  emailVerified Boolean  @default(true)
  createdAt     DateTime @default(now())
}

model PendingRegistration {
  id        String   @id @default(cuid())
  email     String   @unique
  token     String   @unique
  expiresAt DateTime
}
